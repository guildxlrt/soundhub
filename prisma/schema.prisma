// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserAuth {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  email    String @unique
  password String

  artists Artist[]
}

model Artist {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  user_auth_id Int      @unique
  user         UserAuth @relation(fields: [user_auth_id], references: [id], onDelete: Cascade)

  name       String
  bio        String?
  members    Json
  genres     String[]
  avatarPath String?
  isPublic    Boolean

  releases Release[]
  announce Announce[]
  events   Event[]
}

model Announce {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  owner_id Int
  owner    Artist @relation(fields: [owner_id], references: [id], onDelete: Cascade)

  title     String
  text      String
  imagePath String?
}

model Event {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  organisator_id Int
  organisator    Artist @relation(fields: [organisator_id], references: [id], onDelete: Cascade)

  date      DateTime
  place     String
  artists   Int[]
  title     String
  text      String
  imagePath String?
}

model Release {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  owner_id Int
  owner    Artist @relation(fields: [owner_id], references: [id], onDelete: Cascade)

  title       String
  releaseType String
  descript    String?
  price       Int?
  genres      String[]
  folderPath   String
  isPublic    Boolean
  isReadOnly Boolean

  songs Song[]
}

model Song {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  release_id Int
  release    Release @relation(fields: [release_id], references: [id], onDelete: Cascade)

  title     String
  audioPath String
  feats Int[]
  lyrics    String?
  isReadOnly Boolean
}
